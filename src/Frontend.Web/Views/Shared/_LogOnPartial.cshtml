@using ApolloDb

@{
    var userSession = new SessionUser();
}

@if(userSession.IsLoggedIn) {
    <text>Привет <strong>@userSession.Kandidat.GetVollerNameKY()</strong>!
    [ @Html.ActionLink("Abmelden | Выйти", "LogOff", "Account") ]</text>
}
else {
    @:[ @Html.ActionLink("Anmelden | Войти", "Login", "Account") ]
}
