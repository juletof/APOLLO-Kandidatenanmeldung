@using ApolloDb

@{
    var userSession = new SessionUser();
}

@if(userSession.IsLoggedIn) {
    <text>Hallo <strong>@userSession.Kandidat.GetVollerNameKY()</strong>!
    [ @Html.ActionLink("Abmelden | Übersetzen", "LogOff", "Account") ]</text>
}
else {
    @:[ @Html.ActionLink("Anmelden | Übersetzung", "Login", "Account") ]
}
