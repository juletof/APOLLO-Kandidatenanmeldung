@using ApolloDb
@model RegistrierungModel
@{
    ViewBag.Title = "Registrierung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    
    $(function () {
        $("#form").submit(function () {

            alert("form-submit");
            if (!$(this).valid()) {
                alert("false");
            }
            else {
                alert("true");
            }
        });
    });

</script>

<table class="textlinksrechts"> 
	<tr>
	    <td class="links">
	        <p>Um sich für das Auswahlverfahren anzumelden, registrieren Sie sich bitte zunächst:</p>
	    </td>
	    <td class="rechts">
	        <p>
		        <i>Übersetzung</i>, продлить платформу об, улице сейчас действия уже ну:
	        </p>
	    </td>
	</tr>
</table>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" })) 
{				
    <div class="form-horizontal">
        <table class="textlinksrechts"> 
            <tr>
                <td class="links"><p class="ueberschrift">Registrierung</p></td>
                <td class="rechts"><p class="ueberschrift"><i>Übersetzung</i></p></td>
            </tr>
        </table>
        
        <div class="alert alert-error fade in">
              <a class="close" data-dismiss="alert" href="#">×</a>
             Nachricht
        </div>
        						
        <div class="control-group">
			<label class="control-label">Anrede/<i>Übersetzung</i>:</label>
			<div class="controls">
				<select>
					<option>Frau | Übersetzung</option>
					<option>Herr | Übersetzung</option>
				</select>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">Familienname/<i>Übersetzung</i>:</label>
            <div class="controls">
                @Html.TextBoxFor(x => x.FamiliennameKY, new { @placeholder = "KYRILLISCH [nur Übersetzung]"})
            </div>
		</div>
		<div class="control-group">
			<label class="control-label">Vorname/<i>Übersetzung</i>:</label>
            <div class="controls">
                @Html.TextBoxFor(x => x.VornameKY, new { @placeholder = "KYRILLISCH [nur Übersetzung]"})
            </div>
		</div>
		<div class="control-group">
			<label class="control-label">Vatersname/<i>Übersetzung</i>:</label>
            <div class="controls">
                @Html.TextBoxFor(x => x.VatersnameKY, new { @placeholder = "KYRILLISCH [nur Übersetzung]"})
            </div>
		</div>
		<div class="control-group">
			<label class="control-label">Email-Adresse/<i>Übersetzung</i>:</label>
			<div class="controls">
                @Html.TextBoxFor(x => x.Emailadresse, new { @placeholder = "LATEINISCH [nur Übersetzung]" })
            </div>
		</div>
		<div class="control-group">
			<label class="control-label">Passwort/<i>Übersetzung</i>:</label>
            <div class="controls">
                @Html.PasswordFor(x => x.Passwort, new { @placeholder = "KYRILLISCH [nur Übersetzung]"})
            </div>
		</div>
		<div class="control-group">
			<div class="controls">
				<input type="checkbox" class="checkbox mehrzeilig">
                <label class="checkbox mehrzeilig">
                    Hiermit nehme ich zur Kenntnis, dass alle relevanten Informationen 
                    zum Anmeldeverfahren an die von mir angegebene Email-Adresse versendet werden.
                    <br>
                        <i>Übersetzung<br>Übersetzung</i><!--temp Beginn--></br>
                    <span class="temp">Mit dem Häkchen wird der Anmelde-Button freigegeben</span><!--temp Ende-->
                </label>
			</div>
		</div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-apollogruen">Anmelden | <i>Übersetzung</i></button>
            <p style="margin-top: 5px">Sie sind bereits registriert? Hier geht es zum <a href="@Url.Action("Login", "Account")">Login</a>.<br>
                Übersetzung <a href="login.html">Übersetzung</a></p>
        </div>
    </div>
}
