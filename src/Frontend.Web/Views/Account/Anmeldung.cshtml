@model AnmeldungModel
@{
    ViewBag.Title = "Anmeldung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{    
    <div class="alert alert-error fade in hide" id="invalidInputMsg">
        <a class="close" data-dismiss="alert" href="#">×</a>
        Bitte die Eingaben vervollständigen/korrigieren. | Übersetzung
    </div>
    
    <table class="textlinksrechts">
        <tr class="erstezeile alleinestehend">
            <td class="links"><h2>Anmeldung zum Auswahlverfahren für das Praktikum Sommer 2013</h2></td>
            <td class="rechts"><h2><i>Übersetzung</i></h2></td>
        </tr>
    </table>
	<table class="textlinksrechts">
        <tr>
            <td class="links">
                <p>
                    Bitte füllen Sie das untenstehende Formular ...<br>
                    <b>Bitte beachten Sie die jeweils geforderte Eingabesprache.</b></br>
                </p>
                <p>
                    Hinweis: Bitte halten Sie zum Ausfüllen dieses Formulars die Nummer Ihres Inlandspasses bereit.
                    Sicherheitshinweis
                </p>
            </td>
            <td class="rechts"><p><i>Übersetzung</i></p></td>
        </tr>
    </table>

    <table class="textlinksrechts">
        <tr class="erstezeile alleinestehend">
            <td class="links"><h3>Persönliche Angaben</h3></td>
            <td class="rechts"><h3><i>Übersetzung</i></h3></td>
        </tr>
    </table>

    <table class="textlinksrechts">
        <div class="form-horizontal">
            <div class="control-group">
                <label class="control-label">Familienname (lat.) | <i>Übersetzung</i>:</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Familienname, new {@placeholder = "LATEINISCH [nur Übersetzung]", @class = "formular"})
                    <span class="errorAnotation">@Html.ValidationMessageFor(x => x.Familienname)</span>
                    <span class="help-inline">Аbc</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Vorname  (lat.) | <i>Übersetzung</i>:</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Vorname, new {@placeholder = "LATEINISCH [nur Übersetzung]", @class = "formular"})
                    <span class="errorAnotation">@Html.ValidationMessageFor(x => x.Vorname)</span>
                    <span class="help-inline">Аbc</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Geburtsdatum | <i>Übersetzung</i>:</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Geburtsdatum, new {@placeholder = "LATEINISCH [nur Übersetzung]"})
                    <span class="errorAnotation">@Html.ValidationMessageFor(x => x.Geburtsdatum)</span>
                    <span class="help-inline">yyyy-dd-mm</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Nummer des Inlandspasses | <i>Übersetzung</i> <br /> Beispiel: yyyy--y---y-yyy- :</label>
                <div class="controls zweisprachig">
                    @Html.TextBoxFor(x => x.Inlandspass, new {@class = "formular"})
                    <span class="errorAnotation">@Html.ValidationMessageFor(x => x.Inlandspass)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Mobilnummer (freiwillige Angabe)| <i>Übersetzung</i>:</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.Mobilfunknummer, new {@class = "formular"})
                    <span class="errorAnotation">@Html.ValidationMessageFor(x => x.Mobilfunknummer)</span>
                </div>
            </div>
        </div>
    </table>
    <table class="textlinksrechts">
        <tr class="erstezeile alleinestehend">
            <td class="links">
                <h3>Hochschulstudium</h3>
            </td>
            <td class="rechts">
                <h3><i>Übersetzung</i></h3>
            </td>
        </tr>
    </table>

    <table class="textlinksrechts">
        <div class="form-horizontal">
            <div class="control-group">
                <label class="control-label">Hochschule | <i>Übersetzung</i>:</label>
                <div class="controls">
                    @Html.DropDownListFor(x => Model.UniVal, Model.UniOps, new { @style = "width: 300px" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Fakultät | <i>Übersetzung</i>:</label>
                <div class="controls zweisprachig">
                    @Html.TextBoxFor(x => x.Fakultaet, new {@class = "formular", @placeholder = "KYRILLISCH [nur Übersetzung]"})
                    <span class="errorAnotation">@Html.ValidationMessageFor(x => x.Fakultaet)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Spezialisierung | <i>Übersetzung</i>:</label>
                <div class="controls zweisprachig">
                    @Html.TextBoxFor(x => x.Studienfach, new {@class = "formular", @placeholder = "KYRILLISCH [nur Übersetzung]"})
                    <span class="errorAnotation">@Html.ValidationMessageFor(x => x.Studienfach)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Welche der folgenden Bezeichnungen beschreibt Ihr Studienfach am besten? | <i>Übersetzung</i>:</label>
                <div class="controls mehrzeilig">
                    @Html.DropDownListFor(x => Model.StudienfachVal, Model.StudienfachOps, new { @style = "width: 300px" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Am Ende welchen Studienjahrs befinden Sie sich zum Zeitpunkt des angestrebten Praktikums? | <i>Übersetzung</i>:</label>
                <div class="controls mehrzeilig">
                    @Html.DropDownListFor(x => Model.StudienJahrVal, Model.StudienJahrOps)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Handelt es sich um einen verkürzten Studiengang (z.B. nach Technikum)? | <i>Übersetzung</i>:</label>
                <div class="controls">
                    <label class="radio inline">
                        @Html.RadioButton("rdoVerkürzterStudiengang", Model.VerkürzterStudiengang, true)
                        Ja | <i>Übersetzung</i>
                    </label>
                    <label class="radio inline">
                        @Html.RadioButton("rdoVerkürzterStudiengang", Model.VerkürzterStudiengang)
                        Nein | <i>Übersetzung</i></label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Welchen Abschluss streben Sie derzeit an? | <i>Übersetzung</i>:</label>
                <div class="controls">
                    @Html.DropDownListFor(x => Model.AngestrebterAbschlussVal, Model.AngestrebterAbschlussOps)
                </div>
            </div>
        </div>
    </table>
    <table class="textlinksrechts">
        <tr class="erstezeile alleinestehend">
            <td class="links">
                <h3>Deutschkenntnisse</h3>
            </td>
            <td class="rechts">
                <h3><i>Übersetzung</i></h3>
            </td>
        </tr>
    </table>
    <table class="textlinksrechts">
        <div class="form-horizontal">
            <div class="control-group">
                <label class="control-label">Verfügen Sie bereits über Deutschkenntnisse? | <i>Übersetzung</i>:</label>
                <div class="controls">
                    <label class="radio inline">
                        @Html.RadioButton("rdoBereitsDeutschkentnisse", Model.Deutschkentnisse, true)
                        Ja | <i>Übersetzung</i></label>
                    <label class="radio inline">
                        @Html.RadioButton("rdoBereitsDeutschkentnisse", Model.Deutschkentnisse)
                        Nein | <i>Übersetzung</i></label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Wenn ja: wo haben Sie diese Kenntnisse erworben? (mehrere Antworten möglich) | <i>Übersetzung</i>:</label>
                <div class="controls">
                    <label class="checkbox">
                        @Html.CheckBoxFor(x => x.DeutschkentnisseDurchSchule)
                        In der Schule | <i>Übersetzung</i>
                    </label>
                    <label class="checkbox">
                        @Html.CheckBoxFor(x => x.DeutschkentnisseDurchUni)
                        In der Hochschule | <i>Übersetzung</i>
                    </label>
                    <label class="checkbox">
                        @Html.CheckBoxFor(x => x.DeutschkentnisseDurchSonstige)
                        Sonstiges | <i>Übersetzung</i>
                    </label>
                </div>
            </div>
        </div>
    </table>
    <table class="textlinksrechts">
        <tr class="erstezeile alleinestehend">
            <td class="links">
                <h3>Sonstiges</h3>
            </td>
            <td class="rechts">
                <h3><i>Übersetzung</i></h3>
            </td>
        </tr>
    </table>
    <table class="textlinksrechts">
        <div class="form-horizontal">
            <div class="control-group">
                <label class="control-label">Haben Sie sich bereits im Rahmen eines Austauschprogramms in einem deutschsprachigen Land aufgehalten? | <i>Übersetzung</i>:</label>
                <div class="controls">
                    <label class="radio inline">
                        @Html.RadioButton("rdoBereitsAufenthalt", Model.BereitsAufenthalt, true)
                        <input type="radio" name="temp1">
                        Ja | <i>Übersetzung</i>
                    </label>
                    <label class="radio inline">
                        @Html.RadioButton("rdoBereitsAufenthalt", Model.BereitsAufenthalt)
                        Nein | <i>Übersetzung</i></label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Wenn ja, mit welchem Programm? | <i>Übersetzung</i>:</label>
                <div class="controls zweisprachig">
                    @Html.TextBoxFor(x => x.BereitsAufenthaltProgramm, new {@class = "formular", @placeholder = "KYRILLISCH [nur Übersetzung]"})
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Kommentare (optional)| <i>Übersetzung</i>:</label>
                <div class="controls">
                    @Html.TextAreaFor(x => x.BereitsAufenthaltKommentar, 
                                             new{
                                                    @class = "input-xlarge", 
                                                    @placeholder = "KYRILLISCH [nur Übersetzung]", 
                                                    @style = "height: 180px; height:100px;"
                                                })
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        <input type="checkbox">Hiermit bewerbe ich mich für das Auswahlverfahren der APOLLO e.V. Ich versichere, dass ich alle Angaben wahrheitsgemäß gemacht habe.<br><i>Übersetzung<br>Übersetzung</i><!--temp Beginn--></br><span class="temp">Mit dem Häkchen wird der Anmelde-Button freigegeben</span><!--temp Ende-->
                    </label>
                </div>
            </div>
            <div class="control-group">
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-apollogruen">Eingaben absenden | <i>Übersetzung</i></button>
                </div>
            </div>
        </div>
    </table>
}